void setup()
{
  Serial.begin(115200);
  pinMode(servo_top,OUTPUT);
  pinMode(servo_mid, OUTPUT);
  pinMode(servo_bot, OUTPUT);
  pinMode(buzzer, OUTPUT);
  pinMode(scl, OUTPUT);
  pinMode(sda, OUTPUT);
  pinMode(button, INPUT);
  pinMode(ir_sensor, INPUT);
  
  digitalWrite(buzzer, LOW);
  Blynk.begin(auth, ssid, password);
  
  servo1.attach(servo_top);
  servo2.attach(servo_mid);
  servo3.attach(servo_bot);
  servo1.write(0);
  servo2.write(0);
  servo3.write(90);

  //lcd setup test
  Wire.begin(D2, D1);
  lcd.begin(16,2);
  lcd.init(); 
  lcd.backlight();

lcd.home();
  //email-webhook
  Serial.begin(115200);
  delay(100); 
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  timeClient.begin();  
  Serial.println("");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());  
}

void loop()
{
  Blynk.run();
    
  lcd.setBacklight(150);
  lcd.setCursor(0,0);
  lcd.print("Good Afternoon!");

  //get time
  timeClient.update();
  Serial.println(timeClient.getFormattedTime());
  lcd.setCursor(4,1);
  lcd.print(timeClient.getFormattedTime());
  
  //connect to webhook for email
  WiFiClient client; 
  const int httpPort = 80;

  //IR sensor detection
  object = digitalRead(ir_sensor);
  if (object < object_old)
  {
    servo3.write(180);
    delay(2000);
    servo3.write(90);
    object_old = object;
    send_taken_email(); 
    min_var = 0;        
  }
  else if (object>= object_old)
  {
    object_old = object;
    servo3.write(90);
  }
  if ((timeClient.getMinutes()-tablet_minute >= 15) && min_var == 1)
  {
    servo3.write(0);
    min_var = 0; 
    delay(2000);
    servo3.write(90);
    send_not_taken_email();
  }
  if (button == HIGH)
  {
    send_emergency_email();
  }
}
